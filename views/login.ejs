<!-- Link to external stylesheet for login page -->
<link rel="stylesheet" href="/css/login.css" />

<!-- Login form with action, method, and CSS classes -->
<form action="/signin" class="signupContainer" method="post">
  <!-- Heading for the login form -->
  <h1 class="signupHeading">Login</h1>

  <!-- Input field for email -->
  <div class="inputField">
    <input class="inputFieldi" type="text" name="email" placeholder="Email" />
  </div>

  <!-- Input field for password -->
  <div class="inputField">
    <input
      class="inputFieldi"
      type="text"
      name="password"
      placeholder="Password"
    />
  </div>

  <!-- Container for the login button -->
  <div class="btncontainer">
    <button class="btn" type="submit">Login</button>
  </div>

  <!-- Link to the signup page for users who don't have an account -->
  <div>
    <p>Don't have an account <a href="/">Signup</a></p>
  </div>

  <!-- Link to the password reset page -->
  <div>
    <p><a href="/reset">Reset Password</a></p>
  </div>

  <!-- Horizontal line and "Or" text for visual separation -->
  <div class="hr">
    <span class="span1">__________________</span>
    <span class="spanor">Or</span>
    <span class="span2">__________________</span>
  </div>

  <!-- Container for the Google login button -->
  <div class="btncontainer">
    <div class="gbtn">
      <!-- Google logo image -->
      <img
        class="gimg"
        src="https://img.icons8.com/color/1x/google-logo.png"
        alt=""
      />
      <!-- Link to initiate login with Google -->
      <a class="glink" href="/auth/google">Login with Google</a>
    </div>
  </div>
</form>

