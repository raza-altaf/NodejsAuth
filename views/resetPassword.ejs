<!-- Link to external stylesheet for reset password page -->
<link rel="stylesheet" href="/css/reset.css" />

<!-- Container for the reset password form -->
<div class="formContainer">
  <!-- Form for resetting the password -->
  <form class="form" action="/reset" method="post">
    <!-- Container for the image/logo -->
    <div class="img-div">
      <!-- Reset password image -->
      <img
        class="resetimg"
        src="https://img.icons8.com/?size=512&id=10480&format=png"
        alt=""
      />
    </div>

    <!-- Heading for the reset password form -->
    <h1 class="heading">Reset your password!</h1>

    <!-- Input field for email -->
    <div class="inputField">
      <input
        class="inputFieldi"
        type="text"
        placeholder="Email"
        name="email"
        aria-placeholder="Email"
      />
    </div>

    <!-- Input field for old password -->
    <div class="inputField">
      <input
        class="inputFieldi"
        type="password"
        name="oldpassword"
        placeholder="Old Password"
      />
    </div>

    <!-- Input field for new password -->
    <div class="inputField">
      <input
        class="inputFieldi"
        type="password"
        name="newpassword"
        placeholder="New Password"
      />
    </div>

    <!-- Container for the submit button -->
    <div class="btncontainer">
      <button class="btn" type="submit">Submit</button>
    </div>
  </form>
</div>

